# reload assets gfx/models/ships/minmatar_01/_minmatar_01_entities_destroyer.asset

# ship designer scale #
@destroyer_scale = 8.0

# in game size scale #
@destroyer_physical_scale = 2.0

@small_trail_W = 10
@small_trail_L = 60
@medium_trail_W = 50
@medium_trail_L = 300
@large_trail_W = 50
@large_trail_L =  300

