# reload assets gfx/models/ships/amarr_01/_amarr_01_entities_titan.asset

# ship designer scale #
@titan_scale = 50.0
@frame_scale = 50.0

# in game size scale #
@frame_physical_scale = 1.0
@titan_physical_scale = 0.2
@titan_effect_physical_scale = 1.0

@small_trail_W = 10
@small_trail_L = 60
@medium_trail_W = 50
